model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  username String    @unique
  password String
  name     String
  token    String?
  contacts Contact[]
}

model Contact {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  first_name String
  last_name  String?
  email      String   @unique
  phone      String
  address    Address?
  author     User     @relation(fields: [authorId], references: [id])
  authorId   String   @db.ObjectId
}

// Address is an embedded document
type Address {
  street   String
  city     String
  province String
  country  String
  zip      String
}
